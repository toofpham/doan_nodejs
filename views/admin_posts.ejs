<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quản lý bài viết</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center">Quản lý bài viết</h1>

    <% if (session.message) { %>
      <div class="alert alert-<%= session.message.type %> alert-dismissible fade show" role="alert">
        <%= session.message.content %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% session.message = null; %>
    <% } %>

    <!-- Danh sách bài viết -->
    <table class="table table-bordered mt-4">
      <thead>
        <tr>
          <th>ID</th>
          <th>Tiêu đề</th>
          <th>Nội dung</th>
          <th>Danh mục</th>
          <th>Hành động</th>
        </tr>
      </thead>
      <tbody>
        <% posts.forEach(post => { %>
          <tr>
            <td><%= post.id %></td>
            <td><%= post.Title %></td>
            <td><%= post.Content %></td>
            <td><%= post.category_name %></td>
            <td>
              <form action="/admin/posts/edit/<%= post.id %>" method="POST" class="d-inline">
                <input type="text" name="title" value="<%= post.Title %>" required>
                <input type="text" name="content" value="<%= post.Content %>" required>
                <select name="categoryId" required>
                  <% categories.forEach(category => { %>
                    <option value="<%= category.id %>" <%= category.id === post.DanhMucID ? 'selected' : '' %>><%= category.Title %></option>
                  <% }); %>
                </select>
                <button type="submit" class="btn btn-warning btn-sm">Sửa</button>
              </form>
              <form action="/admin/posts/delete/<%= post.id %>" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">Xóa</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>

    <!-- Thêm bài viết mới -->
    <h2 class="mt-5">Thêm bài viết mới</h2>
    <form action="/admin/posts/add" method="POST" class="mt-3">
      <div class="mb-3">
        <label for="title" class="form-label">Tiêu đề</label>
        <input type="text" id="title" name="title" class="form-control" required>
      </div>
      <div class="mb-3">
        <label for="content" class="form-label">Nội dung</label>
        <textarea id="content" name="content" class="form-control" required></textarea>
      </div>
      <div class="mb-3">
        <label for="categoryId" class="form-label">Danh mục</label>
        <select id="categoryId" name="categoryId" class="form-control" required>
          <% categories.forEach(category => { %>
            <option value="<%= category.id %>"><%= category.Title %></option>
          <% }); %>
        </select>
      </div>
      <button type="submit" class="btn btn-primary w-100">Thêm</button>
    </form>
  </div>
  <div class="text-center mt-4">
    <a href="/" class="btn btn-primary">Quay lại trang chủ</a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>